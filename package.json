{
  "name": "kanban-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Trello-like Kanban platform monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "verify:live": "node -r dotenv/config tools/verify-live-stack.mjs",
    "verify:live:web-react": "node -r dotenv/config tools/verify-live-stack.mjs --require-web-react",
    "eval:ask-ai": "node -r dotenv/config tools/eval-ask-ai.mjs",
    "dev:start": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start",
    "dev:stop": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 stop",
    "dev:restart": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 restart",
    "dev:status": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 status",
    "dev:start:no-tunnel": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start -SkipTunnel",
    "dev:start:legacy": "npm run dev:start",
    "dev:stop:legacy": "npm run dev:stop",
    "dev:restart:legacy": "npm run dev:restart",
    "dev:status:legacy": "npm run dev:status",
    "dev:start:legacy:no-tunnel": "npm run dev:start:no-tunnel",
    "dev:start:web-react": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start -WebReact",
    "dev:stop:web-react": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 stop -WebReact",
    "dev:restart:web-react": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 restart -WebReact",
    "dev:status:web-react": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 status -WebReact",
    "dev:start:web-react:no-tunnel": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start -SkipTunnel -WebReact",
    "db:migrate:m1": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0001_m1_core_schema.sql",
    "db:migrate:m2": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0002_m2_discord_integration.sql",
    "db:migrate:m3": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0003_m3_ai_rag_scaffold.sql",
    "db:migrate:m4": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0004_m8_card_enrichment.sql",
    "db:migrate:m5": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0005_m4_thread_to_card.sql",
    "db:migrate:m6": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0006_m5_deterministic_covers.sql",
    "db:migrate:m7": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0007_m6_hygiene_digests.sql",
    "db:migrate:m8": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0008_m9_outbox_ai_viewer_enqueue.sql",
    "db:migrate:m9": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0009_m11_card_search_fts.sql",
    "db:migrate:m10": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0010_m11_card_search_labels.sql",
    "db:migrate:m11": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0011_m12_board_blueprint.sql",
    "db:migrate:m12": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0012_m11_semantic_card_search.sql",
    "db:migrate:m13": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0013_m11_outbox_viewer_semantic_search.sql",
    "db:migrate:m14": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0014_m13_rich_text_descriptions.sql",
    "db:migrate": "npm run db:migrate:m1 && npm run db:migrate:m2 && npm run db:migrate:m3 && npm run db:migrate:m4 && npm run db:migrate:m5 && npm run db:migrate:m6 && npm run db:migrate:m7 && npm run db:migrate:m8 && npm run db:migrate:m9 && npm run db:migrate:m10 && npm run db:migrate:m11 && npm run db:migrate:m12 && npm run db:migrate:m13 && npm run db:migrate:m14",
    "test:workspaces": "npm run test --workspaces --if-present",
    "test:policy": "npm run db:migrate && node -r dotenv/config --test --test-isolation=none \"infra/db/tests/**/*.test.mjs\"",
    "test": "npm run test:workspaces && npm run test:policy",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.7",
    "typescript": "^5.7.3"
  }
}
