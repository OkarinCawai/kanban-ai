{
  "name": "kanban-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Trello-like Kanban platform monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "verify:live": "node -r dotenv/config tools/verify-live-stack.mjs",
    "dev:start": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start",
    "dev:stop": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 stop",
    "dev:restart": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 restart",
    "dev:status": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 status",
    "dev:start:no-tunnel": "powershell -NoLogo -NoProfile -NonInteractive -ExecutionPolicy Bypass -File ./tools/dev-stack.ps1 start -SkipTunnel",
    "db:migrate:m1": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0001_m1_core_schema.sql",
    "db:migrate:m2": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0002_m2_discord_integration.sql",
    "db:migrate:m3": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0003_m3_ai_rag_scaffold.sql",
    "db:migrate:m4": "node -r dotenv/config infra/db/scripts/apply-migration.mjs 0004_m8_card_enrichment.sql",
    "db:migrate": "npm run db:migrate:m1 && npm run db:migrate:m2 && npm run db:migrate:m3 && npm run db:migrate:m4",
    "test:workspaces": "npm run test --workspaces --if-present",
    "test:policy": "npm run db:migrate && node -r dotenv/config --test --test-isolation=none \"infra/db/tests/**/*.test.mjs\"",
    "test": "npm run test:workspaces && npm run test:policy",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.7",
    "typescript": "^5.7.3"
  }
}

